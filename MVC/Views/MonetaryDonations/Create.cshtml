@model MVC.Models.MonetaryDonation

@{
    ViewData["Title"] = "Create";
}
<style>
    .control-label {
        color: orange;
    }
</style>

<h4 class="text-center">Add new Monetary Donation</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="donatorName" class="control-label"></label>
                <input asp-for="donatorName" class="form-control" />
                <span asp-validation-for="donatorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="donationDate" class="control-label"></label>
                <input asp-for="donationDate" class="form-control" />
                <span asp-validation-for="donationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="moneyAmount" class="control-label"></label>
                <input asp-for="moneyAmount" class="form-control" />
                <span asp-validation-for="moneyAmount" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="ADD" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center">
    <a asp-action="Index">View all monetary donations</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
