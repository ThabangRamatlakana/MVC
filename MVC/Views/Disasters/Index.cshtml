@model IEnumerable<MVC.Models.Disaster>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Add a new Disaster</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.disasterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.startDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.endDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.disasterDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.aidType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.disasterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.startDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.endDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.disasterDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.aidType)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.disasterId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.disasterId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.disasterId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
